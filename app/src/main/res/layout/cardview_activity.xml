<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#E0E0E0"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        cardview:cardElevation="0dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#fff"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:id="@+id/user"

                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:id="@+id/person_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/avatar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name"
                    android:layout_marginTop="17dp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/person_photo"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"

                    android:typeface="serif"
                    android:text="Dinesh"
                    />
            </LinearLayout>
            <LinearLayout android:id="@+id/blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"

                android:layout_below="@+id/user"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="16dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:layout_below="@+id/person_name"
                    android:text="Mars in the Solar system"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/description"
                    android:padding="4dp"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:layout_below="@+id/title"
                    android:text="Mars in the Solar system. What is the big fuss about mars? Its yet another big stone floating around the space "
                    />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
